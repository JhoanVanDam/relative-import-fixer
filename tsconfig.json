{
  "compilerOptions": {
    "target": "ES2020", // Suficiente para Node.js modernos (>=14)
    "module": "ESNext", // Import/export nativo, mejor para bundlers
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "declaration": true, // âœ” genera archivos `.d.ts` para tipado externo
    "outDir": "dist", // Carpeta de salida
    "baseUrl": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@core": ["core"],
      "*": ["*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
