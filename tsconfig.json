{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@core": ["core"],
      "@utils": ["utils"]
    }
  },
  "include": ["/dist", "src"],
  "exclude": ["/node_modules"]
}
